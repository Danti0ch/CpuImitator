SRC := src
ASM_SRC    := $(SRC)/asm
CPU_SRC    := $(SRC)/cpu
DISASM_SRC := $(SRC)/disasm

BUILD := build

all: #prepare asm.exe disasm.exe cpu.exe launch.exe
	@echo $(OBJS)

prepare:
	@mkdir $(BUILD) $(ASM_BUILD) $(CPU_BUILD) $(DISASM_BUILD)

asm.exe: $(ASM_SRC)/*.cpp
	g++ -o $@ $>

disasm.exe: $(DISASM_SRC)/*.cpp
	g++ -o $@ $>

cpu.exe: $(CPU_SRC)/*.cpp
	g++ -o $@ $>

launch.exe: $(LAUNCH_SRC)/*.cpp
	g++ -o $@ $>
